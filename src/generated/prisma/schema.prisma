generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserAccount {
  id  Int    @id @default(autoincrement())
  uid String @unique

  email      String  @unique
  username   String  @unique
  profileUrl String?

  role UserRole

  posts Post[]

  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  provider   String?
  lastLogin  DateTime?
  Attachment Attachment[]
}

model Post {
  id Int @id @default(autoincrement())

  owner   UserAccount @relation(fields: [ownerId], references: [id])
  ownerId Int

  title   String
  content String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}

model Attachment {
  id           Int    @id @default(autoincrement())
  filename     String
  originalName String
  size         Int
  mimetype     String
  url          String
  path         String

  owner   UserAccount? @relation(fields: [ownerId], references: [id])
  ownerId Int?

  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
  // generic relation 
  objectId   Int?
  objectType ContentTypeGeneric?
}

enum UserRole {
  user
  admin
}

enum ContentTypeGeneric {
  UserAccount
  Post
  Attachment
}
