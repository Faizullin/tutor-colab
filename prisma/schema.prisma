generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserAccount {
  id  Int    @id @default(autoincrement())
  uid String @unique

  email      String  @unique
  username   String  @unique
  profileUrl String?

  role UserRole

  posts Post[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  provider  String?
  lastLogin DateTime?
}

model Post {
  id Int @id @default(autoincrement())

  user    UserAccount @relation(fields: [ownerId], references: [id])
  ownerId Int

  title   String
  content String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}

enum UserRole {
  user
  admin
}
